{
  "name": "vue-ts-chrome-extension-template",
  "version": "1.0.0",
  "private": true,
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "vue,js,json"
    }
  },
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "run-s lint compile mkdirs copy remove",
    "lint": "vue-cli-service lint",
    "compile": "run-s compile:popup compile:content compile:background",
    "compile:background": "vue-cli-service build --target lib --formats umd --dest dist/js --no-clean --name background src/background/background.js",
    "compile:content": "vue-cli-service build --no-clean src/app.ts",
    "compile:popup": "vue-cli-service build --no-clean src/popup/popup.ts --dest dist/popup",
    "copy": "run-p copy:popup copy:manifest copy:icons copy:assets",
    "copy:assets": "cpx 'src/assets/*' dist/assets/",
    "copy:icons": "cpx 'src/icons/*' dist/icons/",
    "copy:manifest": "cpx manifest.json dist/",
    "copy:popup": "cpx src/popup/index.html dist/popup/",
    "mkdir:assets": "mkdirp dist/assets",
    "mkdir:icons": "mkdirp dist/icons",
    "mkdirs": "run-p mkdir:assets mkdir:icons",
    "release": "npm run build && npm run zip",
    "remove": "run-p remove:css  remove:index remove:demo",
    "remove:css": "rimraf dist/css/chunk-vendors.css",
    "remove:demo": "rimraf dist/js/demo.html",
    "remove:index": "rimraf dist/index.html",
    "watch": "npm-watch",
    "zip": "run(){ zip -r -X releases/extension.zip dist; }; run"
  },
  "dependencies": {
    "@types/chrome": "0.0.95",
    "core-js": "^3.6.4",
    "cpx": "^1.5.0",
    "mkdirp2": "^1.0.4",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.6.0",
    "rimraf": "^3.0.2",
    "sass-loader": "^8.0.2",
    "vue": "^2.6.11",
    "vue-class-component": "^7.2.2",
    "vue-property-decorator": "^8.3.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "@vue/cli-plugin-babel": "^4.2.0",
    "@vue/cli-plugin-eslint": "^4.2.0",
    "@vue/cli-plugin-typescript": "^4.2.0",
    "@vue/cli-service": "^4.2.0",
    "@vue/eslint-config-airbnb": "^5.0.2",
    "@vue/eslint-config-typescript": "^5.0.1",
    "eslint": "^6.7.2",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-vue": "^6.1.2",
    "typescript": "~3.7.5",
    "vue-template-compiler": "^2.6.11"
  }
}
